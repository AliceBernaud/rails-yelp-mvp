<div class="container" >
  <h1 class="d-flex justify-content-center"><%= @restaurant.name  %></h1>
    <div class="d-flex flex-column" >
      <p class="d-flex justify-content-center"><%= @restaurant.address %></p>
        <p class="d-flex justify-content-center"><%= @restaurant.category %></p>
    </div>
    <div class="d-flex justify-content-center">
    <div><%= link_to "avis", new_restaurant_review_path(@restaurant)%></div>
    <br>
    <p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <br>
  <% end %>
</ul>
         <button type="button" class="btn btn-success ">
         <%= link_to "Retour", restaurants_path(@restaurant) %>
         </button>
     </div>
</div>
